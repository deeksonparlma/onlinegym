<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UI.liveGym"
    android:background="#5D4C70"
    android:id="@+id/layt"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="950dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/feature"
        android:visibility="gone">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The ultimate Fitness gym"
            android:fontFamily="@font/capture_it"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="60dp"
            android:layout_marginStart="40dp"
            android:visibility="gone"/>


    </LinearLayout>

    <!--<fragment-->
    <!--android:id="@+id/fragment2"-->
    <!--android:name="com.epicodus.gym.Fragments.liveGymFragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginTop="160dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_marginBottom="0dp" />-->
    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="483dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:text="Home"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="481dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:text="Stats"
        android:textColor="#fff"
        android:textSize="15dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/liveGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:text="LiveGym"
        android:textColor="#A460F1"
        android:textSize="15dp"
        android:visibility="gone"/>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_marginTop="290dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="553dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/playback" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="27dp"
        android:src="@drawable/play" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/playforwad" />
    <LinearLayout
        android:background="#000408"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/record" />



        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/eye" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5k viewing"
            android:textColor="#fff"
            android:textSize="12sp"
            />
    </LinearLayout>




</RelativeLayout>
