<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="650dp"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".Authentication.Authentication">

    <TextView
        android:id="@+id/trainers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="541dp"
        android:layout_marginBottom="32dp"
        android:text="Certified instructors"
        android:textColor="#000"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/trainers2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="573dp"
        android:layout_marginBottom="59dp"
        app:srcCompat="@drawable/assistant" />

    <ImageView
        android:id="@+id/equipment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="452dp"
        android:layout_marginBottom="61dp"
        app:srcCompat="@drawable/run" />

    <ImageView
        android:id="@+id/price"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="331dp"
        android:layout_marginBottom="61dp"
        app:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/equipment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="428dp"
        android:layout_marginBottom="30dp"
        android:text="Cool equipment"
        android:textColor="#000"
        android:textSize="11sp"
        tools:text="cool equipment" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="31dp"
        android:text="Affordable prices"
        android:textColor="#000"
        android:textSize="11sp"
        tools:text="Affordable prices" />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginPart"
        android:layout_width="230dp"
        android:layout_height="380dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="401dp"
        android:layout_marginBottom="178dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="146dp"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="195dp"
            android:hint="password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="285dp"
            android:text="Log in"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="346dp"
            android:text="Don't have an account ? Sign Up"
            android:textColor="#B9C8FD"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/login2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="73dp"
            android:text="Log in"
            android:fontFamily="@font/capture_it"
            android:textColor="#000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/loginUsername"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="username"
            android:layout_marginTop="115dp"
            android:layout_marginStart="15dp"
            android:paddingStart="8dp"
            android:textColor="#000"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/SignPart"
        android:visibility="invisible"
        android:layout_width="230dp"
        android:layout_height="380dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="401dp"
        android:layout_marginBottom="178dp">
        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"

           />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="66dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="164dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="358dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:src="@drawable/login2" />

        <EditText
            android:id="@+id/username"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="username"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"/>

        <EditText
            android:id="@+id/email1"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="120dp"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/password1"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="155dp"
            android:hint="password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/password2"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="190dp"
            android:hint="confirm password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/signup1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="285dp"
            android:text="Sign Up"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/login2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="346dp"
            android:text="Have an account ? Log in"
            android:textColor="#B9C8FD"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/capture_it"
            android:text="Sign up"
            android:textColor="#000"
            android:textSize="30sp" />



        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="230dp"
            android:hint="Phone number"
            android:inputType="phone" />

        <TextView
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="130dp"
            android:textSize="9sp"
            android:text="tap image" />



    </androidx.cardview.widget.CardView>
</RelativeLayout>