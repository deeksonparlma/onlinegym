<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    android:background="#5D4C70">



    <RelativeLayout
        android:visibility="gone"
        android:layout_width="450dp"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="494dp"
            android:text="Upcoming classes"
            android:textColor="#000"
            android:textSize="20dp" />


        <VideoView
            android:visibility="gone"
            android:id="@+id/videoView"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="376dp"
            android:layout_weight="1" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="160dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/feature">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The ultimate Fitness gym"
            android:fontFamily="@font/capture_it"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="90dp"
            android:layout_marginStart="40dp"/>

    </LinearLayout>
    <fragment
        android:id="@+id/fragment"
        android:name="com.epicodus.gym.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp" />
    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="483dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:text="Home"
        android:textColor="#ffff"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="481dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:text="Stats"
        android:textColor="#ffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/liveGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/roundtextview"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:text="LiveGym"
        android:textColor="#ffff"
        android:textSize="15dp" />


</RelativeLayout>